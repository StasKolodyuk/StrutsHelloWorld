<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
    <form-beans>
        <form-bean name="CustomerForm" type="com.epam.strutshelloworld.controller.form.CustomerForm"/>
    </form-beans>
    <global-forwards>
        <forward name="mainpage" path="index.jsp" />
    </global-forwards>
    <action-mappings>
        <action path="/submitCustomerForm"
        type="com.epam.strutshelloworld.controller.action.CustomerAction"
        name="CustomerForm"
        scope="request"
        validate="true"
        input="pages/customerDetails.jsp">
            <forward name="success" path="pages/success.jsp" />
            <forward name="failure" path="pages/failure.jsp" />
        </action>
    </action-mappings>
    <controller processorClass="org.apache.struts.action.RequestProcessor"/>
    <message-resources parameter="messages"/>
</struts-config>