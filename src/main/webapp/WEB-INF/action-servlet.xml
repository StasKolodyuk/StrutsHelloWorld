<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    
    <bean name="/gotoCustomerDetails" class="org.apache.struts.actions.ForwardAction"/>
    <bean name="/addNewsForm" class="com.epam.strutshelloworld.controller.action.AddNewsAction">
        <property name="newsManager" ref="newsManager" />
    </bean>
    
    <bean name="dbConnector" class="com.epam.strutshelloworld.db.pool.DBConnector">
        <property name="url" value="jdbc:mysql://localhost:3306/betting_db" />
        <property name="user" value="root" />
        <property name="password" value="Greendayrocks1"/>
    </bean>
    
    <bean name="connectionPool" class="com.epam.strutshelloworld.db.pool.MySQLConnectionPool" init-method="initConnections" destroy-method="close">
        <property name="dbConnector" ref="dbConnector" />
    </bean>
    
    <bean name="newsDAO" class="com.epam.strutshelloworld.db.dao.MySQLNewsDAO">
        <constructor-arg ref="connectionPool" />
    </bean>
    
    <bean name="newsManager" class="com.epam.strutshelloworld.model.businesslogic.POJONewsManager">
        <constructor-arg ref="newsDAO" />
    </bean>
    
</beans>